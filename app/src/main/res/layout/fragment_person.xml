<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.PersonFragment"
    android:background="@drawable/top_profile_background"
    >
    <TextView
        android:id="@+id/tvProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="My Profile"
        android:gravity="center|top"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"/>

    <LinearLayout
        android:id="@+id/llProfileVertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/tvProfile">

        <LinearLayout
            android:id="@+id/llProfileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            >

            <TextView
                android:id="@+id/tvProfileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="25sp"
                android:layout_weight="1"/>

            <EditText
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:hint="Fullname"
                android:textSize="25sp"
                android:layout_weight="1"
                android:id="@+id/etProfileName"
                android:paddingHorizontal="5dp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/llProfileAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/tvProfileAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age"
                android:textSize="25sp"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/etProfileAge"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:hint="Enter your age"
                android:textSize="25sp"
                android:layout_weight="1"
                android:paddingHorizontal="5dp"
                android:inputType="number"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llProfileWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/tvProfileWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight"
                android:textSize="25sp"
                android:layout_weight="1"
                />

            <EditText
                android:id="@+id/etProfileWeight"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="Enter your weight"
                android:textSize="25sp"
                android:layout_weight="1"
                android:paddingHorizontal="5dp"
                android:inputType="numberDecimal"/>

            <TextView
                android:id="@+id/tvProfileGram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kg"
                android:textSize="25sp"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llProfileDistanceHiked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/tvProfileDistanceHiked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance Hiked"
                android:textSize="25sp"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/etProfileDistanceHiked"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_weight="1"
                android:paddingHorizontal="5dp"
                android:enabled="false"
                />
            <TextView
                android:id="@+id/tvProfileMeter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="m"
                android:textSize="25sp"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/llProfileAverageToughness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/tvProfileAverageToughness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Average Toughness"
                android:textSize="25sp"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/etProfileAverageToughness"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_weight="1"
                android:paddingHorizontal="5dp"
                android:enabled="false"
                />
            <TextView
                android:id="@+id/tvProfileAvgToughnessUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="?"
                android:textSize="25sp"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/llProfileTotalToughness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/tvProfileTotalToughness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Toughness"
                android:textSize="25sp"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/etProfileTotalToughness"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_weight="1"
                android:paddingHorizontal="5dp"
                android:enabled="false"
                />
            <TextView
                android:id="@+id/tvProfileTotalToughnessUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="?"
                android:textSize="25sp"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/llProfileAveragePace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/tvProfileAveragePace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Average Pace"
                android:textSize="25sp"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/etProfileAveragePace"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_weight="1"
                android:paddingHorizontal="5dp"
                android:enabled="false"
                />
            <TextView
                android:id="@+id/tvProfileAveragePaceUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="m/s"
                android:textSize="25sp"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/llProfileTotalPace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/tvProfileTotalPace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Average Pace"
                android:textSize="25sp"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/etProfileTotalPace"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_weight="1"
                android:paddingHorizontal="5dp"
                android:enabled="false"
                />
            <TextView
                android:id="@+id/tvProfileTotalPaceUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="m/s"
                android:textSize="25sp"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llProfileButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/btProfileSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Save"
                android:layout_marginRight="10dp"></Button>

            <Button
                android:id="@+id/btProfileContinue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Continue"></Button>

        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>